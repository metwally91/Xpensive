                exportExcelText: 'Export Excel',
                exportPdfText: 'Export PDF',
                settingsTitle: 'Settings',
                languageSettingLabel: 'Language',
                currencySettingLabel: 'Default Currency',
                dataManagementTitle: 'Data Management',
                backupText: 'Backup Data',
                restoreText: 'Restore Data',
                clearDataText: 'Clear All Data',
                aboutTitle: 'About',
                aboutText: 'My Expenses is a professional tool for tracking daily expenses and managing monthly and weekly budgets. The app works offline and stores your data securely on your device.',
                versionText: 'Version: 1.0.0',
                dailyOption: 'Daily',
                weeklyOption: 'Weekly',
                monthlyOption: 'Monthly',
                week1Label: 'Week 1',
                week2Label: 'Week 2',
                week3Label: 'Week 3',
                week4Label: 'Week 4',
                spent: 'Spent',
                from: 'of',
                operations: 'transactions'
            }
        };

        // Currency symbols
        const currencySymbols = {
            'SAR': 'Ø±.Ø³',
            'USD': '$',
            'EUR': 'â‚¬',
            'GBP': 'Â£',
            'AED': 'Ø¯.Ø¥',
            'EGP': 'Ø¬.Ù…',
            'KWD': 'Ø¯.Ùƒ',
            'QAR': 'Ø±.Ù‚'
        };

        // ============================================
        // IndexedDB Functions
        // ============================================
        
        function initDB() {
            return new Promise((resolve, reject) => {
                const request = indexedDB.open('ExpenseTrackerDB', 1);
                
                request.onerror = () => reject(request.error);
                request.onsuccess = () => resolve(request.result);
                
                request.onupgradeneeded = (event) => {
                    const db = event.target.result;
                    
                    if (!db.objectStoreNames.contains('expenses')) {
                        const expenseStore = db.createObjectStore('expenses', { keyPath: 'id', autoIncrement: true });
                        expenseStore.createIndex('date', 'date', { unique: false });
                        expenseStore.createIndex('category', 'category', { unique: false });
                    }
                    
                    if (!db.objectStoreNames.contains('settings')) {
                        db.createObjectStore('settings', { keyPath: 'key' });
                    }
                };
            });
        }

        async function saveExpense(expense) {
            const db = await initDB();
            const transaction = db.transaction(['expenses'], 'readwrite');
            const store = transaction.objectStore('expenses');
            
            expense.timestamp = new Date().toISOString();
            await store.add(expense);
            
            return new Promise((resolve, reject) => {
                transaction.oncomplete = () => resolve();
                transaction.onerror = () => reject(transaction.error);
            });
        }

        async function getExpenses() {
            const db = await initDB();
            const transaction = db.transaction(['expenses'], 'readonly');
            const store = transaction.objectStore('expenses');
            const request = store.getAll();
            
            return new Promise((resolve, reject) => {
                request.onsuccess = () => resolve(request.result);
                request.onerror = () => reject(request.error);
            });
        }

        async function deleteExpense(id) {
            const db = await initDB();
            const transaction = db.transaction(['expenses'], 'readwrite');
            const store = transaction.objectStore('expenses');
            await store.delete(id);
            
            return new Promise((resolve, reject) => {
                transaction.oncomplete = () => resolve();
                transaction.onerror = () => reject(transaction.error);
            });
        }

        async function saveSetting(key, value) {
            const db = await initDB();
            const transaction = db.transaction(['settings'], 'readwrite');
            const store = transaction.objectStore('settings');
            await store.put({ key, value });
            
            return new Promise((resolve, reject) => {
                transaction.oncomplete = () => resolve();
                transaction.onerror = () => reject(transaction.error);
            });
        }

        async function getSetting(key) {
            const db = await initDB();
            const transaction = db.transaction(['settings'], 'readonly');
            const store = transaction.objectStore('settings');
            const request = store.get(key);
            
            return new Promise((resolve, reject) => {
                request.onsuccess = () => resolve(request.result ? request.result.value : null);
                request.onerror = () => reject(request.error);
            });
        }

        async function clearAllData() {
            const db = await initDB();
            const transaction = db.transaction(['expenses', 'settings'], 'readwrite');
            await transaction.objectStore('expenses').clear();
            await transaction.objectStore('settings').clear();
            
            return new Promise((resolve, reject) => {
                transaction.oncomplete = () => resolve();
                transaction.onerror = () => reject(transaction.error);
            });
        }

        // ============================================
        // Utility Functions
        // ============================================

        function formatCurrency(amount, currency = settings.currency) {
            return `${parseFloat(amount).toFixed(2)} ${currencySymbols[currency] || currency}`;
        }

        function getCurrentWeek() {
            const now = new Date();
            const start = new Date(now.getFullYear(), now.getMonth(), 1);
            const diff = now - start;
            const oneWeek = 7 * 24 * 60 * 60 * 1000;
            return Math.min(Math.floor(diff / oneWeek), 3);
        }

        function getDaysLeftInWeek() {
            const now = new Date();
            const start = new Date(now.getFullYear(), now.getMonth(), 1);
            const weekNum = getCurrentWeek();
            const weekEnd = new Date(start.getTime() + (weekNum + 1) * 7 * 24 * 60 * 60 * 1000);
            const daysLeft = Math.ceil((weekEnd - now) / (24 * 60 * 60 * 1000));
            return Math.max(0, Math.min(7, daysLeft));
        }

        function getMonthExpenses() {
            const now = new Date();
            const monthStart = new Date(now.getFullYear(), now.getMonth(), 1);
            return expenses.filter(e => new Date(e.date) >= monthStart);
        }

        function getWeekExpenses(weekNum) {
            const now = new Date();
            const monthStart = new Date(now.getFullYear(), now.getMonth(), 1);
            const weekStart = new Date(monthStart.getTime() + weekNum * 7 * 24 * 60 * 60 * 1000);
            const weekEnd = new Date(weekStart.getTime() + 7 * 24 * 60 * 60 * 1000);
            
            return expenses.filter(e => {
                const d = new Date(e.date);
                return d >= weekStart && d < weekEnd;
            });
        }

        function getTodayExpenses() {
            const today = new Date().toISOString().split('T')[0];
            return expenses.filter(e => e.date === today);
        }

        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast');
            const toastMessage = document.getElementById('toastMessage');
            
            toast.className = `toast ${type} show`;
            toastMessage.textContent = message;
            
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }

        // ============================================
        // UI Update Functions
        // ============================================

        function updateBudgetSummary() {
            const monthExpenses = getMonthExpenses();
            const monthTotal = monthExpenses.reduce((sum, e) => sum + parseFloat(e.amount), 0);
            const monthBudget = budget.monthly;
            const monthRemaining = monthBudget - monthTotal;
            const monthPercent = monthBudget > 0 ? (monthTotal / monthBudget) * 100 : 0;

            document.getElementById('monthlyRemaining').textContent = formatCurrency(monthRemaining);
            document.getElementById('monthlySpent').textContent = `${translations[currentLang].spent}: ${formatCurrency(monthTotal)}`;
            document.getElementById('monthlyTotal').textContent = `${translations[currentLang].from}: ${formatCurrency(monthBudget)}`;
            
            const monthBar = document.getElementById('monthlyProgressBar');
            monthBar.style.width = `${Math.min(monthPercent, 100)}%`;
            monthBar.className = 'budget-progress-bar';
            if (monthPercent >= 90) monthBar.classList.add('danger');
            else if (monthPercent >= 80) monthBar.classList.add('warning');

            const currentWeek = getCurrentWeek();
            const weekExpenses = getWeekExpenses(currentWeek);
            const weekTotal = weekExpenses.reduce((sum, e) => sum + parseFloat(e.amount), 0);
            const weekBudget = budget.customWeeks ? budget.weeks[currentWeek] : (budget.monthly / 4);
            const weekRemaining = weekBudget - weekTotal;
            const weekPercent = weekBudget > 0 ? (weekTotal / weekBudget) * 100 : 0;

            document.getElementById('weeklyRemaining').textContent = formatCurrency(weekRemaining);
            document.getElementById('weeklySpent').textContent = `${translations[currentLang].spent}: ${formatCurrency(weekTotal)}`;
            document.getElementById('weeklyTotal').textContent = `${translations[currentLang].from}: ${formatCurrency(weekBudget)}`;
            
            const weekBar = document.getElementById('weeklyProgressBar');
            weekBar.style.width = `${Math.min(weekPercent, 100)}%`;
            weekBar.className = 'budget-progress-bar';
            if (weekPercent >= 90) weekBar.classList.add('danger');
            else if (weekPercent >= 80) weekBar.classList.add('warning');

            const todayExpenses = getTodayExpenses();
            const todayTotal = todayExpenses.reduce((sum, e) => sum + parseFloat(e.amount), 0);
            document.getElementById('todayTotal').textContent = formatCurrency(todayTotal);
            document.getElementById('todayCount').textContent = `${todayExpenses.length} ${translations[currentLang].operations}`;

            document.getElementById('currentWeekNum').textContent = currentWeek + 1;
            document.getElementById('daysLeftInWeek').textContent = getDaysLeftInWeek();
        }

        function updateRecentExpenses() {
            const list = document.getElementById('recentExpensesList');
            const recent = expenses.slice(-10).reverse();
            
            if (recent.length === 0) {
                list.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">ğŸ’¸</div>
                        <div class="empty-state-text">${translations[currentLang].emptyStateText}</div>
                        <p>${translations[currentLang].emptyStateHint}</p>
                    </div>
                `;
                return;
            }

            list.innerHTML = recent.map(e => {
                const cat = categories[currentLang].find(c => c.id === e.category);
                return `
                    <div class="expense-item">
                        <div style="display: flex; align-items: center; gap: 1rem; flex: 1;">
                            <span style="font-size: 2rem;">${cat ? cat.icon : 'ğŸ’°'}</span>
                            <div class="expense-info">
                                <div class="expense-category">${cat ? cat.name : e.category}</div>
                                <div class="expense-date">${e.date}${e.notes ? ' - ' + e.notes : ''}</div>
                            </div>
                        </div>
                        <div class="expense-actions">
                            <button class="btn-icon delete" onclick="deleteExpenseById(${e.id})">ğŸ—‘ï¸</button>
                        </div>
                        <div class="expense-amount">${formatCurrency(e.amount, e.currency)}</div>
                    </div>
                `;
            }).join('');
        }

        function updateCategoryGrid() {
            const grid = document.getElementById('categoryGrid');
            grid.innerHTML = categories[currentLang].map(cat => `
                <div class="category-btn ${selectedCategory === cat.id ? 'active' : ''}" 
                     onclick="selectCategory('${cat.id}')">
                    <span class="category-icon">${cat.icon}</span>
                    <div>${cat.name}</div>
                </div>
            `).join('');
        }

        function updateStatistics() {
            const monthExpenses = getMonthExpenses();
            
            document.getElementById('totalExpensesCount').textContent = monthExpenses.length;
            
            const avgDaily = monthExpenses.length > 0 
                ? monthExpenses.reduce((sum, e) => sum + parseFloat(e.amount), 0) / new Date().getDate()
                : 0;
            document.getElementById('avgDailyExpense').textContent = formatCurrency(avgDaily);

            const categoryTotals = {};
            monthExpenses.forEach(e => {
                categoryTotals[e.category] = (categoryTotals[e.category] || 0) + parseFloat(e.amount);
            });
            
            const topCat = Object.keys(categoryTotals).reduce((a, b) => 
                categoryTotals[a] > categoryTotals[b] ? a : b, '-');
            const topCatName = topCat !== '-' 
                ? categories[currentLang].find(c => c.id === topCat)?.name || topCat
                : '-';
            document.getElementById('topCategoryName').textContent = topCatName;

            const breakdown = document.getElementById('categoryBreakdown');
            if (Object.keys(categoryTotals).length === 0) {
                breakdown.innerHTML = `<div class="empty-state">${translations[currentLang].emptyStateText}</div>`;
            } else {
                breakdown.innerHTML = Object.entries(categoryTotals)
                    .sort(([,a], [,b]) => b - a)
                    .map(([catId, total]) => {
                        const cat = categories[currentLang].find(c => c.id === catId);
                        const percent = (total / monthExpenses.reduce((sum, e) => sum + parseFloat(e.amount), 0)) * 100;
                        return `
                            <div class="expense-item">
                                <div style="display: flex; align-items: center; gap: 1rem; flex: 1;">
                                    <span style="font-size: 2rem;">${cat?.icon || 'ğŸ’°'}</span>
                                    <div class="expense-info">
                                        <div class="expense-category">${cat?.name || catId}</div>
                                        <div class="budget-progress" style="margin-top: 0.5rem;">
                                            <div class="budget-progress-bar" style="width: ${percent}%"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="expense-amount">${formatCurrency(total)}</div>
                            </div>
                        `;
                    }).join('');
            }
        }

        function updateHistory(filterCat = 'all') {
            const list = document.getElementById('historyList');
            const filtered = filterCat === 'all' 
                ? expenses.slice().reverse()
                : expenses.filter(e => e.category === filterCat).reverse();

            if (filtered.length === 0) {
                list.innerHTML = `<div class="empty-state">${translations[currentLang].emptyStateText}</div>`;
                return;
            }

            list.innerHTML = filtered.map(e => {
                const cat = categories[currentLang].find(c => c.id === e.category);
                return `
                    <div class="expense-item">
                        <div style="display: flex; align-items: center; gap: 1rem; flex: 1;">
                            <span style="font-size: 2rem;">${cat ? cat.icon : 'ğŸ’°'}</span>
                            <div class="expense-info">
                                <div class="expense-category">${cat ? cat.name : e.category}</div>
                                <div class="expense-date">${e.date}${e.notes ? ' - ' + e.notes : ''}</div>
                            </div>
                        </div>
                        <div class="expense-actions">
                            <button class="btn-icon delete" onclick="deleteExpenseById(${e.id})">ğŸ—‘ï¸</button>
                        </div>
                        <div class="expense-amount">${formatCurrency(e.amount, e.currency)}</div>
                    </div>
                `;
            }).join('');
        }

        function updateLanguage() {
            Object.keys(translations[currentLang]).forEach(key => {
                const element = document.getElementById(key);
                if (element) {
                    if (element.tagName === 'INPUT' && element.type !== 'checkbox') {
                        if (key === 'notesLabel') {
                            element.placeholder = translations[currentLang][key];
                        }
                    } else {
                        element.textContent = translations[currentLang][key];
                    }
                }
            });

            document.documentElement.dir = currentLang === 'ar' ? 'rtl' : 'ltr';
            document.documentElement.lang = currentLang;

            const langButtons = document.querySelectorAll('#langSwitch, #langSwitchSettings');
            langButtons.forEach(btn => {
                btn.textContent = currentLang === 'ar' ? 'English' : 'Ø§Ù„Ø¹Ø±Ø¨ÙŠØ©';
            });

            updateCategoryGrid();
            updateBudgetSummary();
            updateRecentExpenses();
            updateStatistics();
            
            const filterSelect = document.getElementById('filterCategory');
            const currentFilter = filterSelect.value;
            filterSelect.innerHTML = `<option value="all">${translations[currentLang].allCategoriesOption}</option>` +
                categories[currentLang].map(cat => `<option value="${cat.id}">${cat.name}</option>`).join('');
            filterSelect.value = currentFilter;
            updateHistory(currentFilter);
        }

        // ============================================
        // Event Handlers
        // ============================================

        function selectCategory(catId) {
            selectedCategory = catId;
            updateCategoryGrid();
        }

        async function deleteExpenseById(id) {
            if (confirm(currentLang === 'ar' ? 'Ù‡Ù„ ØªØ±ÙŠØ¯ Ø­Ø°Ù Ù‡Ø°Ø§ Ø§Ù„Ù…ØµØ±ÙˆÙØŸ' : 'Delete this expense?')) {
                await deleteExpense(id);
                expenses = await getExpenses();
                updateBudgetSummary();
                updateRecentExpenses();
                updateStatistics();
                updateHistory(document.getElementById('filterCategory').value);
                showToast(currentLang === 'ar' ? 'ØªÙ… Ø§Ù„Ø­Ø°Ù Ø¨Ù†Ø¬Ø§Ø­' : 'Deleted successfully');
            }
        }

        function switchPage(pageName) {
            const pages = ['homePage', 'budgetPage', 'statsPage', 'historyPage', 'settingsPage'];
            pages.forEach(page => {
                document.getElementById(page).style.display = page === pageName ? 'block' : 'none';
            });

            const navItems = document.querySelectorAll('.nav-item');
            navItems.forEach(item => item.classList.remove('active'));
            
            const navMap = {
                homePage: 'navHome',
                budgetPage: 'navBudget',
                statsPage: 'navStats',
                historyPage: 'navHistory',
                settingsPage: 'navSettings'
            };
            
            if (navMap[pageName]) {
                document.getElementById(navMap[pageName]).classList.add('active');
            }

            if (pageName === 'statsPage') {
                updateStatistics();
            } else if (pageName === 'historyPage') {
                updateHistory('all');
            }
        }

        // ============================================
        // Export Functions
        // ============================================

        function exportToExcel() {
            const csv = [
                ['Date', 'Category', 'Amount', 'Currency', 'Notes'].join(','),
                ...expenses.map(e => {
                    const cat = categories.en.find(c => c.id === e.category);
                    return [
                        e.date,
                        cat ? cat.name : e.category,
                        e.amount,
                        e.currency,
                        e.notes || ''
                    ].join(',');
                })
            ].join('\n');

            const blob = new Blob([csv], { type: 'text/csv' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `expenses-${new Date().toISOString().split('T')[0]}.csv`;
            a.click();
            
            showToast(currentLang === 'ar' ? 'ØªÙ… Ø§Ù„ØªØµØ¯ÙŠØ± Ø¨Ù†Ø¬Ø§Ø­' : 'Exported successfully');
        }

        function exportToPDF() {
            showToast(currentLang === 'ar' ? 'Ø¬Ø§Ø±ÙŠ Ø§Ù„Ø¹Ù…Ù„ Ø¹Ù„Ù‰ Ù…ÙŠØ²Ø© PDF...' : 'PDF feature coming soon...');
        }

        async function backupData() {
            const data = {
                expenses: expenses,
                budget: budget,
                settings: settings,
                version: '1.0.0',
                date: new Date().toISOString()
            };

            const blob = new Blob([JSON.stringify(data, null, 2)], { type: 'application/json' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `expense-backup-${new Date().toISOString().split('T')[0]}.json`;
            a.click();
            
            showToast(currentLang === 'ar' ? 'ØªÙ… Ø§Ù„Ù†Ø³Ø® Ø§Ù„Ø§Ø­ØªÙŠØ§Ø·ÙŠ Ø¨Ù†Ø¬Ø§Ø­' : 'Backup successful');
        }

        async function restoreData(event) {
            const file = event.target.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = async (e) => {
                try {
                    const data = JSON.parse(e.target.result);
                    
                    await clearAllData();
                    
                    for (const expense of data.expenses) {
                        await saveExpense(expense);
                    }
                    
                    await saveSetting('budget', data.budget);
                    await saveSetting('settings', data.settings);
                    
                    location.reload();
                } catch (error) {
                    showToast(currentLang === 'ar' ? 'ÙØ´Ù„ Ø§Ø³ØªØ¹Ø§Ø¯Ø© Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª' : 'Restore failed', 'error');
                }
            };
            reader.readAsText(file);
        }

        async function clearData() {
            if (confirm(currentLang === 'ar' ? 'Ù‡Ù„ ØªØ±ÙŠØ¯ Ø­Ø°Ù Ø¬Ù…ÙŠØ¹ Ø§Ù„Ø¨ÙŠØ§Ù†Ø§ØªØŸ Ù„Ø§ ÙŠÙ…ÙƒÙ† Ø§Ù„ØªØ±Ø§Ø¬Ø¹ Ø¹Ù† Ù‡Ø°Ø§ Ø§Ù„Ø¥Ø¬Ø±Ø§Ø¡!' : 'Delete all data? This cannot be undone!')) {
                await clearAllData();
                location.reload();
            }
        }

        // ============================================
        // Initialization
        // ============================================

        async function init() {
            // Load data from IndexedDB
            expenses = await getExpenses() || [];
            const savedBudget = await getSetting('budget');
            const savedSettings = await getSetting('settings');
            
            if (savedBudget) budget = savedBudget;
            if (savedSettings) {
                settings = savedSettings;
                currentLang = settings.language;
            }

            // Set default date to today
            document.getElementById('expenseDate').valueAsDate = new Date();

            // Update UI
            updateLanguage();
            updateBudgetSummary();
            updateRecentExpenses();
            updateCategoryGrid();

            // Set budget inputs
            document.getElementById('monthlyBudgetInput').value = budget.monthly;
            document.getElementById('customWeekBudget').checked = budget.customWeeks;
            document.getElementById('weekBudgetEditor').style.display = budget.customWeeks ? 'block' : 'none';
            
            if (budget.customWeeks) {
                document.getElementById('week1Budget').value = budget.weeks[0];
                document.getElementById('week2Budget').value = budget.weeks[1];
                document.getElementById('week3Budget').value = budget.weeks[2];
                document.getElementById('week4Budget').value = budget.weeks[3];
            }

            // Set currency
            document.getElementById('currencySelect').value = settings.currency;
            document.getElementById('defaultCurrencySelect').value = settings.currency;
            document.getElementById('expenseCurrency').value = settings.currency;

            // Populate filter dropdown
            document.getElementById('filterCategory').innerHTML = 
                `<option value="all">${translations[currentLang].allCategoriesOption}</option>` +
                categories[currentLang].map(cat => `<option value="${cat.id}">${cat.name}</option>`).join('');

            // Event Listeners
            document.getElementById('langSwitch').addEventListener('click', async () => {
                currentLang = currentLang === 'ar' ? 'en' : 'ar';
                settings.language = currentLang;
                await saveSetting('settings', settings);
                updateLanguage();
            });

            document.getElementById('langSwitchSettings').addEventListener('click', async () => {
                currentLang = currentLang === 'ar' ? 'en' : 'ar';
                settings.language = currentLang;
                await saveSetting('settings', settings);
                updateLanguage();
            });

            document.getElementById('fabBtn').addEventListener('click', () => {
                document.getElementById('addExpenseModal').classList.add('show');
                selectedCategory = null;
                updateCategoryGrid();
            });

            document.getElementById('closeModal').addEventListener('click', () => {
                document.getElementById('addExpenseModal').classList.remove('show');
            });

            document.getElementById('saveExpenseBtn').addEventListener('click', async () => {
                if (!selectedCategory) {
                    showToast(currentLang === 'ar' ? 'Ø§Ø®ØªØ± ÙØ¦Ø© Ù…Ù† ÙØ¶Ù„Ùƒ' : 'Please select a category', 'error');
                    return;
                }

                const amount = document.getElementById('expenseAmount').value;
                if (!amount || parseFloat(amount) <= 0) {
                    showToast(currentLang === 'ar' ? 'Ø£Ø¯Ø®Ù„ Ù…Ø¨Ù„Øº ØµØ­ÙŠØ­' : 'Enter valid amount', 'error');
                    return;
                }

                const expense = {
                    category: selectedCategory,
                    amount: parseFloat(amount),
                    currency: document.getElementById('expenseCurrency').value,
                    date: document.getElementById('expenseDate').value,
                    notes: document.getElementById('expenseNotes').value,
                    recurring: document.getElementById('recurringExpense').checked,
                    recurringType: document.getElementById('recurringType').value
                };

                await saveExpense(expense);
                expenses = await getExpenses();
                
                document.getElementById('addExpenseModal').classList.remove('show');
                document.getElementById('expenseAmount').value = '';
                document.getElementById('expenseNotes').value = '';
                document.getElementById('recurringExpense').checked = false;
                document.getElementById('recurringOptions').style.display = 'none';
                selectedCategory = null;

                updateBudgetSummary();
                updateRecentExpenses();
                showToast(currentLang === 'ar' ? 'ØªÙ… Ø¥Ø¶Ø§ÙØ© Ø§Ù„Ù…ØµØ±ÙˆÙ Ø¨Ù†Ø¬Ø§Ø­' : 'Expense added successfully');
            });

            document.getElementById('recurringExpense').addEventListener('change', (e) => {
                document.getElementById('recurringOptions').style.display = e.target.checked ? 'block' : 'none';
            });

            document.getElementById('customWeekBudget').addEventListener('change', (e) => {
                document.getElementById('weekBudgetEditor').style.display = e.target.checked ? 'block' : 'none';
            });

            document.getElementById('saveBudgetBtn').addEventListener('click', async () => {
                budget.monthly = parseFloat(document.getElementById('monthlyBudgetInput').value) || 0;
                budget.customWeeks = document.getElementById('customWeekBudget').checked;
                
                if (budget.customWeeks) {
                    budget.weeks = [
                        parseFloat(document.getElementById('week1Budget').value) || 0,
                        parseFloat(document.getElementById('week2Budget').value) || 0,
                        parseFloat(document.getElementById('week3Budget').value) || 0,
                        parseFloat(document.getElementById('week4Budget').value) || 0
                    ];
                } else {
                    budget.weeks = [0, 0, 0, 0];
                }

                await saveSetting('budget', budget);
                updateBudgetSummary();
                showToast(currentLang === 'ar' ? 'ØªÙ… Ø­ÙØ¸ Ø§Ù„Ù…ÙŠØ²Ø§Ù†ÙŠØ©' : 'Budget saved');
            });

            document.getElementById('defaultCurrencySelect').addEventListener('change', async (e) => {
                settings.currency = e.target.value;
                await saveSetting('settings', settings);
                document.getElementById('currencySelect').value = settings.currency;
                document.getElementById('expenseCurrency').value = settings.currency;
                updateBudgetSummary();
                updateRecentExpenses();
            });

            document.getElementById('filterCategory').addEventListener('change', (e) => {
                updateHistory(e.target.value);
            });

            document.getElementById('exportExcelBtn').addEventListener('click', exportToExcel);
            document.getElementById('exportPdfBtn').addEventListener('click', exportToPDF);
            document.getElementById('backupBtn').addEventListener('click', backupData);
            document.getElementById('restoreBtn').addEventListener('click', () => {
                document.getElementById('restoreFileInput').click();
            });
            document.getElementById('restoreFileInput').addEventListener('change', restoreData);
            document.getElementById('clearDataBtn').addEventListener('click', clearData);

            // Navigation
            document.getElementById('navHome').addEventListener('click', () => switchPage('homePage'));
            document.getElementById('navBudget').addEventListener('click', () => switchPage('budgetPage'));
            document.getElementById('navStats').addEventListener('click', () => switchPage('statsPage'));
            document.getElementById('navHistory').addEventListener('click', () => switchPage('historyPage'));
            document.getElementById('navSettings').addEventListener('click', () => switchPage('settingsPage'));

            // PWA Install
            window.addEventListener('beforeinstallprompt', (e) => {
                e.preventDefault();
                deferredPrompt = e;
                document.getElementById('installBanner').classList.add('show');
            });

            document.getElementById('installButton').addEventListener('click', async () => {
                if (deferredPrompt) {
                    deferredPrompt.prompt();
                    const { outcome } = await deferredPrompt.userChoice;
                    deferredPrompt = null;
                    document.getElementById('installBanner').classList.remove('show');
                }
            });

            // Service Worker Registration
            if ('serviceWorker' in navigator) {
                navigator.serviceWorker.register('data:text/javascript;base64,' + btoa(`
                    self.addEventListener('install', (e) => {
                        self.skipWaiting();
                    });
                    
                    self.addEventListener('activate', (e) => {
                        e.waitUntil(clients.claim());
                    });
                `));
            }
        }

        // Start the app
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', init);
        } else {
            init();
        }
    </script>
</body>
</html>
